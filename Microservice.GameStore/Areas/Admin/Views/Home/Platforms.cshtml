
@{
    ViewData["Title"] = "Platforms";
}

@model PlatformsViewModel
<div class="container">




    <div class="single-shop-product">
        <h1>Платформы</h1>
        <a class="add_to_cart_button" asp-area="Admin" asp-controller="Platforms" asp-action="Edit">Добавить платформу</a>
    </div>
    <form method="get">
        <div class="form-group">
            <input name="name" class="form-control" placeholder="Введите наименование платформы" />
        </div>
    </form>
    <table class="tableBasket">
        <thead>
            <tr>
                <td><b>ID:</b></td>
                <td><b>Наименование:</b></td>
                <td><b>Управление</b></td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Platforms.Count() > 0)
            {
                @foreach (var obj in Model.Platforms)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.NamePlatform</td>
                        <td>
                            <a class="control_buttons" asp-area="Admin" asp-controller="Platforms" asp-action="Edit" asp-route-id=@obj.Id>Изменить</a>
                            <a class="control_buttons" asp-area="Admin" asp-controller="Platforms" asp-action="Delete" asp-route-id=@obj.Id>Удалить</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

